<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Email:</b>
  <%= link_to @user.email, 'mailto:'+@user.email %>
</p>

<p>
    <b>Tweets:</b>
    <ul>
    <% @user.microposts.each do |tweet| %>
        <li><%= tweet.content %> <%= link_to tweet.created_at, micropost_path(tweet) %></li>
    <% end %>
    </ul>
</p>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
